<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <!-- Название продукта (показывается только в админ-панели) -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название продукта"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Контейнер для имени, даты и иконок действий -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Имя пользователя"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Дата -->
        <TextView
            android:id="@+id/review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:text="Дата"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Иконки действий (справа сверху) -->
        <LinearLayout
            android:id="@+id/review_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/edit_review_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit"
                android:contentDescription="Редактировать отзыв"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/delete_review_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bin"
                android:contentDescription="Удалить отзыв" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Рейтинг -->
    <RatingBar
        android:id="@+id/review_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:isIndicator="true"
        android:layout_marginTop="8dp" />

    <!-- Текст отзыва (под рейтингом) -->
    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текст отзыва"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

</LinearLayout>