<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:background="@color/EerieBlack"
    android:orientation="vertical">

    <include layout="@layout/header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/checkout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оформление"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:contentDescription="Назад"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checkout_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/checkout_title"
            android:layout_marginTop="0dp"
            android:padding="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Способ оплаты"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/payment_method_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/payment_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Картой"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/payment_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Наличными"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RadioGroup>

            <!-- Обёртка для Spinner и иконки -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <!-- Выпадающий список для выбора карты -->
                <Spinner
                    android:id="@+id/card_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/price_filter_icon"
                    android:visibility="gone"
                    android:background="@android:drawable/edit_text"
                    android:spinnerMode="dropdown" />

                <!-- Иконка стрелочки -->
                <ImageView
                    android:id="@+id/price_filter_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/baseline_arrow_drop_down_24"
                    android:contentDescription="Иконка выпадающего списка"
                    android:visibility="gone" />

            </RelativeLayout>

            <!-- Обёртка для сообщения об отсутствии карт и иконки -->
            <LinearLayout
                android:id="@+id/no_cards_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/checkout_hint_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/information"
                    android:contentDescription="Иконка информации" />

                <TextView
                    android:id="@+id/no_cards_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Для этого способа оплаты необходимо добавить карту"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/items_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Товары (0)"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0 ₽"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/commission_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/commission_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комиссия"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/commission_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0 ₽"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/total_label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Итого"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0 ₽"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/checkout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Оформить заказ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:enabled="false" />

        <CheckBox
            android:id="@+id/terms_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Согласен с условиями Правил пользования торговой площадкой и правилами возврата"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:maxWidth="300dp" />

    </LinearLayout>

</LinearLayout>