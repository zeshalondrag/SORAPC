<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_text"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя клиента"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/client_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/client_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Роль: Пользователь"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/edit_role_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Редактировать роль"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu_medium"
        android:backgroundTint="@color/Aquamarine"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

</LinearLayout>