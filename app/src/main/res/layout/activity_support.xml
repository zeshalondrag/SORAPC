<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportActivity"
    android:background="@color/EerieBlack"
    android:orientation="vertical">

    <include layout="@layout/header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поддержка"
        android:fontFamily="@font/ubuntu_medium"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_text"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мы здесь, чтобы помочь вам"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мы всегда на связи, чтобы поддержать вас."
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Почта: "
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sorapc.support@gmail.com"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Телефон: "
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+7 (999) 123-45-67"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мессенджеры: "
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telegram, Whatsapp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Режим работы: "
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ежедневно с 10:00 до 20:00"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_text"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обратиться в поддержку"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/support_message_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите ваше сообщение"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/white"
                    android:textColorHint="#666666"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:minHeight="100dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"/>

                <Button
                    android:id="@+id/send_support_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отправить"
                    android:textAllCaps="false"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/Aquamarine"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_navigation"/>

</LinearLayout>